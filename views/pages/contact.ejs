<style>
    .contact-container {
        max-width: 1200px;
        margin: 2rem auto;
        padding: 0 1rem;
        min-height: calc(80vh - 200px);
        overflow-y: hidden;
    }

    .contact-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-top: 2rem;
    }

    .map-container {
        width: 100%;
        height: 400px;
        overflow: hidden;
    }

    .map-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    .contact-info {
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .logo-container {
        text-align: center;
        margin-bottom: 2rem;
    }

    .logo-container ion-icon {
        font-size: 4rem;
        color: var(--accent);
        margin-bottom: 1rem;
    }

    .logo-container h2 {
        color: var(--text);
        font-size: 1.8rem;
    }

    .address {
        font-size: 1.2rem;
        line-height: 1.6;
        color: var(--text);
        text-align: center;
    }

    @media screen and (max-width: 768px) {
        .contact-content {
            grid-template-columns: 1fr;
        }

        .contact-info {
            order: -1;
        }

        .map-container {
            height: 300px;
        }
    }

    @media screen and (max-width: 480px) {
        .contact-container {
            margin: 1rem auto;
        }

        .contact-info {
            padding: 1rem;
        }

        .logo-container ion-icon {
            font-size: 3rem;
        }

        .logo-container h2 {
            font-size: 1.5rem;
        }

        .address {
            font-size: 1rem;
        }
    }
</style>

<div class="contact-content">
    <div class="map-container">
        <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d5090.342905475836!2d3.5179850770216676!3d50.36335739363032!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c2edc441763c5b%3A0x4de5666a6bd319cc!2sLYCEE%20WALLON!5e0!3m2!1sfr!2sfr!4v1733242564251!5m2!1sfr!2sfr"
            width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class="contact-info">
        <div class="logo-container">
            <ion-icon name="school-outline"></ion-icon>
            <h2>Le lycée Henri Wallon</h2>
        </div>
        <p class="address">16 Pl. de la République,<br>59300 Valenciennes</p>
    </div>
</div>